package com.ihis.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.ihis.domain.Menu;
import com.ihis.domain.Restaurant;
import com.ihis.domain.RestaurantList;
import com.ihis.repository.MenuRepository;
import com.ihis.repository.RestaurantRepository;

@RestController
@RequestMapping("/")
public class Controller {
	
	@Autowired
	RestaurantRepository restaurantRepository;
	
	@Autowired
	MenuRepository menuRepository;
	
	@RequestMapping("/")
	public RestaurantList list() {

		List<Restaurant> restaurants = restaurantRepository.findAll();
		RestaurantList restaurantList = new RestaurantList();
		
		for (Restaurant restaurant : restaurants){
			restaurantList.addRestaurantList(restaurant.getName());
		}
		
		return restaurantList;
	}
	
	@RequestMapping("/{name}")
	public Restaurant restarurantDetail(@PathVariable String name) {
		Restaurant restaurant = restaurantRepository.findOne(name);
		return restaurant;
	}
	
	@RequestMapping("/{name}/{menuName}")
	public Menu MenuDetail(@PathVariable String name, @PathVariable String menuName) {
		Menu menu = menuRepository.findByRestaurantNameAndName(name, menuName);
		return menu;
	}
}
